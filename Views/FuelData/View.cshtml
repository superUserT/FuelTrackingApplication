@model Fuel_Tracking_application.Models.UpdateFuelDataModel
@{
}


<h1>Edit Fuel Data</h1>
<form method="post" action="View" class="mt-5">
    <div class="mb-3">
        <label for="" class="form-label">Instance ID</label>
        <input type="text" class="form-control" asp-for="dataId" readonly>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Vehicle Registration</label>
        <input type="text" class="form-control" asp-for="vehicleregistrationNumber">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Vehicle Make</label>
        <input type="text" class="form-control" asp-for="vehicleMake">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Reporting Employee Name</label>
        <input type="text" class="form-control" asp-for="reportingEmployee">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Date of Log</label>
        <input type="date" class="form-control" asp-for="Date">
    </div>

    
    <div class="mb-3">
        <label for="" class="form-label">Odometer Reading</label>
        <input type="number" class="form-control" asp-for="odometerTotal">
    </div>
    

    <div class="mb-3">
        <label for="" class="form-label">Filled Volume</label>
        <input type="number" class="form-control" asp-for="filledVolume">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Reported Fuel Price(R)</label>
        <input type="number" class="form-control" asp-for="fuelPrice">
    </div>
    
    <div class="mb-3">
        <label for="" class="form-label">Fill Station Type (Inland or Costal)</label>
        <input type="text" class="form-control" asp-for="fillStationType">
    </div>
    
    <div class="mb-3">
        <label for="" class="form-label">Filled (Yes or NO)</label>
        <input type="text" class="form-control" asp-for="filled">
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Site Location</label>
        <input type="text" class="form-control" asp-for="siteLocation">
    </div>
    <div class="mb-3">
    <label for="" class="form-label">Fuel Type</label>
        <input type="text" class="form-control" asp-for="fuelType">
    </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>
    <button type="submit" class="btn-danger" asp-action="Delete" asp-controller="FuelData">Delete</button>



</form>